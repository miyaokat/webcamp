<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/common', users: @user %>
		</div>
		<div class="col-lg-8">
			<h2>Users</h2>
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>Image</th>
						<th>Name</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<% @users.each do |us| %>
				<tr>
					<td><%= attachment_image_tag us, :profile_image, size: "100x100", fallback: "no_image.jpg" %></td>
					<td><%= us.name %></td>
					<td><%= link_to 'show', user_path(us.id) %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>
