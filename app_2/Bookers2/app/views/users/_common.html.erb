<!-- ユーザー編集画面（自ユーザーでない場合は、メニューを変える -->
<% if @new_book.errors.any? %>
<div id="error_explanation">
  	<h2><%= @new_book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<h2>User Info</h2>
<%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<table class="table table-condensed">
<tr>
	<th>
		Name
	</th>
	<th>
		<%= @user.name %>
	</th>
</tr>
<tr>
	<th>
		Introduction
	</th>
	<th>
		<%= @user.introduction %>
	</th>
</tr>
</table>
<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_<%=@user.id%>" href="/users/<%=@user.id%>/edit"></a>


<h2>New Book</h2>
<%= form_for(@new_book) do |b| %>

<h4>Title</h4>
<%= b.text_field :title, :size=>"35" %>

<h4>Opinion</h4>
<%= b.text_area :body, :size=>"34" %>

<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
<% end %>
