<% if @book.errors.any? %>
<div id="error_explanation">
	<h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1>Editing Book</h1>

			<%= form_for(@book) do |b| %>
			<h3>Title</h3>
			<%= b.text_field :title, :size=>"77"%>

			<h3>Opnion</h3>
			<%= b.text_area :body, :size=>"76"%>
			<br>
			<input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
			<br>
			<%= link_to 'show', book_path %>
			<%= link_to 'back', books_path %>
			</div>
			<% end %>
	</div>
</div>
