<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/common', users: @user %>
		</div>
		<div class="col-lg-9">

			<h2>Book detail</h2>
			<table class="table table-condensed">
				<thead>
					<tr>
						<th colspan="5"></th>
					</tr>
				</thead>
				<tr>
					<td>
						<%= link_to user_path(@user.id) do %>
						<%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
						<br>
						<%= @user.name%>
						<% end %>
					</td>
					<td>
						<%= link_to @book.title, book_path(@book.id) %>
					</td>
					<td>
						<%= @book.body%>
					</td>

					<% if @user.id == current_user.id %>
					<td>
					<a class="btn-sm btn-success edit_book_<%=@book.id%>" href="/books/<%=@book.id%>/edit">Edit</a>
					</td>
					<td>
						<a data-confirm="本当に消しますか？" class="btn-sm btn-danger destroy_book_<%=@book.id%>" rel="nofollow" data-method="delete" href="/books/<%=@book.id%>">Destroy</a>
					</td>
					<% else %>
					<% end %>
				</tr>

			</table>
		</div>
	</div>
</div>



