<!--ー自分にかかわらず、データ状に投稿された本の一覧を表示-->
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/common', users: @user %>
		</div>
		<div class="col-lg-8">
			<h2>Books</h2>
			<table class="table table-condensed">
				<thead>
					<tr>
						<th colspan="1"></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |bs| %>
				<tr>
					<td>
						<%= link_to user_path(bs.user.id) do %>
						<%= attachment_image_tag bs.user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td> 
						<%= link_to bs.title, book_path(bs.id)%>
					</td>
					<td>
						<%= bs.body%>
					</td>

					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>