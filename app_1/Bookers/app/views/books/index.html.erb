<% if flash[:notice] %>
  <p class="success"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
　　　　　<th colspan="3"></th>
	</tr>
	<!-- 以下ループで一覧を取得 -->
	<tbody>
	<% @books.each do |bk| %>
	<tr>
		<td>	
			<%=bk.title%>
		</td>
		<td>
			<%=bk.body%>
		</td>
		<td>
		<%= link_to "Show", book_path(bk.id) %>
		</td>
		<td>
		<%= link_to "Edit", edit_book_path(bk.id) %>
		</td>
		<td>
		<%= link_to "Destroy", destroy_book_path(bk.id), method: :delete, "data-confirm" => "Are you sure？" %>
		</td>
	<% end %>
	</tr>
	<tbody>
</table>


<!-- 以下新規登録フォーム-->


<h3>New Book</h3>
<%= form_for(@book) do |b| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h4>Title</h4>
<%= b.text_field :title %>

<h4>Body</h4>
<%= b.text_area :body %>
<br>
<%= b.submit 'Create Book' %>
<% end %>

